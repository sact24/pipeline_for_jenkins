pipeline {
    agent any
    

    stages {
        stage('first') {
            steps {
                echo 'Hello World'
            }
        }
        stage("second"){
            steps{
                sh 'echo gradle build will go here'
            }
        }
        stage("added via gitpush"){
            steps{
                echo 'auto deployed via gitpusg trigger'
        }
        }
    post {
        always {
            emailext body: 'Pipeline executed.', subject: 'Automated email via Jenkins', to: 'sachin.thakur@rezo.ai'
            }
            }
}
}
